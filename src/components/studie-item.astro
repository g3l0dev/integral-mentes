---
interface Props {
  title: string;
  body: string;
}
const { title, body } = Astro.props;
---

<div
  class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700">
</div>

<h3 class="text-lg font-semibold text-gray-500 ms-4">
  {title}
</h3>
<p class="mb-4 text-base font-normal text-gray-900 ms-4">
  {body}
</p>
