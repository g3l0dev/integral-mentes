---
import Cta from "../cta.astro";
import SectionContainer from "../section-container.astro";
import Whatsapp from "../../icon/whatsapp.astro";
---

<SectionContainer>
  <h2 class="text-center text-balance text-3xl leading-10 font-semibold mb-9">
    Tarifa
  </h2>
  <section class="mb-9 flex flex-col md:justify-center md:items-center">
    <article class="w-full md:w-[22.562rem] xl:w-max-[22.562rem]">
      <div class="w-full p-3 bg-[#10587C]">
        <h3 class="text-center text-2xl text-white font-semibold">Cartagena</h3>
      </div>
      <div>
        <h4 class="text-center tex-xl font-semibold text-balance text-black/50">
          Cuota inicial
        </h4>
        <p class="text-lg text-center text-pretty text-black/50">
          $<span class="text-4xl text-[#C6E5B1] font-bold">160.000</span>cop
        </p>
      </div>
      <div class="p-4">
        <h5 class="text-xl font-semibold text-black/50 mb-2">Valor Sesi√≥n</h5>
        <p class="text-lg text-black/50">
          $<span class="text-4xl font-bold text-black mb-5">90.000</span>cop
        </p>
        <h5 class="text-xl font-semibold text-black/50 mb-2">6 sesiones</h5>
        <p class="text-lg text-black/50">
          $<span class="text-4xl font-bold text-black">500.000</span>cop
        </p>
      </div>
      <p class="text-center text-balance text-2xl text-[#134A67]">
        <strong class="font-bold">Pago por adelantado</strong>
      </p>
    </article>
  </section>

  <section class="flex flex-col">
    <h2 class="text-center text-3xl mb-9">Agenda tu cita</h2>
    <Cta class="self-center gap-x-3 w-full md:w-auto md:self-start">
      <Whatsapp class="size-6" />
      Agenda
    </Cta>
  </section>
</SectionContainer>
